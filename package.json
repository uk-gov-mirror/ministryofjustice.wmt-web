{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload management tool",
  "main": "app/app.js",
  "scripts": {
    "start": "gulp",
    "build": "yarn install && gulp generate-assets && gulp sync",
    "unit-test": "standard && mocha --recursive test/unit/",
    "integration-test": "gulp assets && mocha --recursive test/integration --timeout=60000",
    "test": "yarn unit-test && yarn integration-test",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "accessibility-test": "mocha --recursive test/accessibility --timeout=100000"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser"
    ]
  },
  "devDependencies": {
    "chai": "3.5.x",
    "cheerio": "^1.0.0-rc.2",
    "gulp-mocha": "4.2.x",
    "gulp-standard": "9.0.x",
    "gulp-webdriver": "^2.0.3",
    "mocha": "3.2.x",
    "proxyquire": "1.7.x",
    "selenium-standalone": "6.11.0",
    "sinon": "^1.17.5",
    "sinon-bluebird": "^3.1.0",
    "standard": "^10.0.2",
    "supertest": "3.0.x",
    "wdio-mocha-framework": "^0.5.10",
    "wdio-sauce-service": "^0.4.0",
    "webdriverio": "^4.8.0"
  },
  "dependencies": {
    "body-parser": "1.17.x",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.2",
    "csurf": "^1.9.0",
    "datatables.net": "^1.10.15",
    "express": "4.15.x",
    "express-nunjucks": "2.2.x",
    "express-sanitized": "^0.5.1",
    "express-session": "^1.15.5",
    "govuk-elements-sass": "3.0.x",
    "govuk_frontend_toolkit": "5.2.x",
    "govuk_template_jinja": "0.19.x",
    "gulp": "^3.9.1",
    "gulp-nsp": "^2.4.2",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-uglify": "^3.0.0",
    "helmet": "^3.6.0",
    "jquery": "^1.12.4",
    "json2csv": "3.11.0",
    "knex": "^0.12.9",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "mssql": "^3.3.0",
    "nunjucks": "3.0.x",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.3.2",
    "passport-saml": "^0.15.0",
    "pg": "6.1.x",
    "proxyquire": "1.7.x",
    "serve-favicon": "2.4.x",
    "underscore": "^1.8.3",
    "util": "^0.10.3",
    "validator": "^8.2.0",
    "wmt-probation-rules": "ministryofjustice/wmt-probation-rules.git#v0.8.6"
  }
}
