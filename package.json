{
  "name": "wmt-web",
  "version": "0.1.0",
  "description": "The frontend of the workload measurement tool",
  "main": "app/app.js",
  "scripts": {
    "start": "gulp",
    "build": "yarn install && gulp generate-assets && gulp sync",
    "unit-test": "standard && mocha --recursive test/unit/",
    "integration-test": "gulp assets && mocha --recursive test/integration --timeout=60000",
    "test": "yarn unit-test && yarn integration-test",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "accessibility-test": "mocha --recursive test/accessibility --timeout=100000"
  },
  "standard": {
    "ignore": [
      "node_modules/*",
      "app/govuk_modules/*",
      "app/assets/javascripts/*.js",
      "app/public/javascripts/*.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "xit",
      "browser"
    ]
  },
  "devDependencies": {
    "chai": "3.5.x",
    "cheerio": "^1.0.0-rc.2",
    "gulp-mocha": "7.0.x",
    "gulp-standard": "9.0.x",
    "gulp-webdriver": "^3.0.0",
    "mocha": "7.1.x",
    "proxyquire": "2.1.x",
    "selenium-standalone": "6.17.0",
    "sinon": "^9.0.0",
    "bluebird": "^3.7.2",
    "standard": "^10.0.2",
    "supertest": "4.0.x",
    "@wdio/mocha-framework": "^5.18.7",
    "@wdio/sauce-service": "^5.16.10",
    "@wdio/cli": "^5.18.7",
    "webdriverio": "^5.18.7"
  },
  "dependencies": {
    "body-parser": "1.19.x",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^2.0.0-beta.2",
    "csurf": "^1.11.0",
    "datatables.net": "^1.10.20",
    "excel4node": "^1.7.2",
    "express": "4.17.x",
    "express-nunjucks": "2.2.x",
    "express-sanitized": "^0.5.1",
    "express-session": "^1.17.0",
    "floatthead": "^2.1.4",
    "govuk-elements-sass": "3.1.x",
    "govuk_frontend_toolkit": "9.0.x",
    "govuk_template_jinja": "0.26.x",
    "gulp": "^4.0.2",
    "gulp-nsp": "^3.0.1",
    "gulp-rename": "2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "he": "^1.2.0",
    "helmet": "^3.21.3",
    "jquery": "^3.4.1",
    "json2csv": "3.11.5",
    "knex": "^0.20.10",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mssql": "^6.1.0",
    "nunjucks": "3.2.x",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.4.1",
    "passport-saml": "^1.3.3",
    "pg": "7.18.x",
    "proxyquire": "2.1.x",
    "serve-favicon": "2.5.x",
    "underscore": "^1.9.2",
    "util": "^0.12.2",
    "validator": "^12.2.0",
    "wmt-probation-rules": "ministryofjustice/wmt-probation-rules.git#v0.9.9"
  }
}
